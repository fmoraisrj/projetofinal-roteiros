<h1 class="shop">Estabelecimento</h1>
<br/>

<table width="100%" class="tabela_info" cellspacing="5">
	<tr>
		<td colspan="2" align="center">
			<%= render :partial => "tourist_sights/location" %>
		</td>
	</tr>
	<tr>
		<td width="15%" align="right">
			<strong>Nome:</strong>
		</td>
		<td><%=h @shop.name %></td>
	</tr>
	<tr>
		<td width="15%" align="right">
			<strong>Endereço:</strong>
		</td>
		<td><%=h @shop.address %></td>
	</tr>
	<% if @shop.phone and @shop.phone.length > 0 %>
	<tr>
		<td width="15%" align="right">
			<strong>Telefone:</strong>
		</td>
		<td><%=h @shop.phone %></td>
	</tr>
	<% end %>
	<tr>
		<td width="15%" align="right" valign="top">
			<strong>Descrição:</strong>
		</td>
		<td style="text-align: justify;"><%=h @shop.description %></td>
	</tr>
	<% if @shop.key_words and @shop.key_words.length > 0 %>
	<tr>
		<td width="15%" align="right">
			<strong>Palavras-chave:</strong>
		</td>
		<td><%=h @shop.key_words %></td>
	</tr>
	<% end %>
	<% if @shop.tourist_sight %>
	<tr>
		<td width="15%" align="right">
			<strong>Associado a:</strong>
		</td>
		<td>
			<%= link_to "#{@shop.tourist_sight.name}", @shop.tourist_sight %>
		</td>
	</tr>
	<% end %>
	<tr><td><br/></td></tr>
</table>

<br/>
<br/>

<%= link_to 'Editar', edit_shop_path(@shop) %> |
<%= link_to 'Voltar', shops_path %>
