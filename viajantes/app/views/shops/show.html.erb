<%= corner('users_evaluations') %>
<%= corner('evaluation_average') %>

<h1 class="shop">Estabelecimento</h1>
<br/>

<%= render :partial => 'info' %>

<br/><br/>

<!-- Titulo Avaliacoes -->
<h2 class="evaluation_32">
  Avaliação de outros usuários
  <% if logged_in? %>
	  <%= link_to 'Avaliar', new_shop_shop_evaluation_path(@shop), 
							  :class => 'botao' %>
  <% end %>
</h2>
<!-- /Titulo Avaliacoes -->

<!-- Media das Avaliacoes -->
<div id="evaluation_average" style="float: right;">
  <%= render :partial => 'evaluations/average' %>
</div>
<!-- /Media das Avaliacoes -->

<!-- Div de Avaliacoes e Dicas -->
<div style="width: 670px;">

  <div id="users_evaluations">
	  <%= render :partial => 'evaluations/list' %>
  </div>

  <br/><br/>

  <h2 class="tips_32">
    Dicas &nbsp;
    <% if logged_in? %>
	    <%= link_to 'Nova dica', new_shop_shop_tip_path(@shop), :class => "botao" %>
    <% end %>
  </h2>
  
  <div>
    <%= render :partial => 'tips/list' %>
  </div>
</div>
<!-- /Div de Avaliacoes e Dicas -->

<div class="clearer"></div>

<br/>
<br/>

<% if logged_in? %>
	<%= link_to 'Editar', edit_shop_path(@shop) %> |
<% end %>

