<table width="100%" class="tabela_info" cellspacing="5">
	<tr>
		<td colspan="2" align="center">
			<%= render :partial => "tourist_sights/location" %>
		</td>
	</tr>
	<tr>
		<td width="13%" align="right">
			<strong>Nome:</strong>
		</td>
		<td><%=h @shop.name %></td>
	</tr>
	<tr>
		<td width="13%" align="right">
			<strong>Endereço:</strong>
		</td>
		<td><%=h @shop.address %></td>
	</tr>
	<% if @shop.phone and @shop.phone.length > 0 %>
	<tr>
		<td width="13%" align="right">
			<strong>Telefone:</strong>
		</td>
		<td><%=h @shop.phone %></td>
	</tr>
	<% end %>
	<% if @shop.fax and @shop.fax.length > 0 %>
	<tr>
		<td width="13%" align="right">
			<strong>Fax:</strong>
		</td>
		<td><%=h @shop.fax %></td>
	</tr>
	<% end %>
	<% if @shop.email and @shop.email.length > 0 %>
	<tr>
		<td width="13%" align="right">
			<strong>E-mail:</strong>
		</td>
		<td><%=h @shop.email %></td>
	</tr>
	<% end %>
	<% if @shop.site and @shop.site.length > 0 %>
	<tr>
		<td width="13%" align="right">
			<strong>Web site:</strong>
		</td>
		<td>
			<%= "<a href=\"#{h @shop.site}\" target=\"_blank\">#{h @shop.site}</a>" %>
		</td>
	</tr>
	<% end %>
	<tr>
		<td width="13%" align="right" valign="top">
			<strong>Descrição:</strong>
		</td>
		<td style="text-align: justify;">
		  <% if (not @shop.description) or @shop.description.length == 0 %>
		    <i>Não informado</i>
		  <% else %>
			<%= simple_format(h @shop.description) %>
  		<% end %>
		</td>
	</tr>
	<% if @shop.additional_info and @shop.additional_info.length > 0 %>
	<tr>
		<td width="13%" align="right" valign="top">
			<strong>Informações adicionais:</strong>
		</td>
		<td style="text-align: justify;">     
			<%= simple_format(h @shop.additional_info) %>
		</td>
	</tr>
	<% end %>
	<% if @shop.key_words and @shop.key_words.length > 0 %>
	<tr>
		<td width="13%" align="right">
			<strong>Palavras-chave:</strong>
		</td>
		<td><%=h @shop.key_words %></td>
	</tr>
	<% end %>
	<% if @shop.tourist_sight %>
	<tr>
		<td width="13%" align="right">
			<strong>Associado a:</strong>
		</td>
		<td>
			<%= link_to "#{@shop.tourist_sight.name}", @shop.tourist_sight %>
		</td>
	</tr>
	<% end %>
</table>
