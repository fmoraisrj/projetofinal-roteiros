<%= corner('last_added', 
					 'last_added_shops', 
					 'last_added_tourist_sights',
					 'last_added_events',
					 'last_added_roadmaps'
					) %>

<div id="last_added" class="coluna_vertical">
	<h4 class="ultimos_adicionados_banner">Últimos adicionados</h4>

	<div class="coluna_vertical_corpo">
		
		<div id="last_added_shops">
			<br/>
			<div style="float: right">
				<span class="shop_32"></span>
			</div>
			<span class="box_title">Estabelecimentos</span>
			<br/><br/>
			<div class="box">
				<div class="search_results_root">
					<%= render :partial => "shops/list_root", :locals => {:shops => @last_added_shops} %>
					<p align="right" style="margin: 0px 11px 0px 0px;">
						<%= link_to 'ver todos &raquo;', shops_path %>
					</p>
				</div>
			</div>
		</div>

		<br/>

		<div id="last_added_tourist_sights">
			<br/>
			<div style="float: right">
				<span class="tourist_sight_32"></span>
			</div>
			<span class="box_title">Pontos Turísticos</span>
			<br/><br/>
			<div class="box">
				<div class="search_results_root">
					<%= render :partial => "tourist_sights/list_root", :locals => {:tourist_sights => @last_added_tourist_sights} %>
					<p align="right" style="margin: 0px 11px 0px 0px;">
						<%= link_to 'ver todos &raquo;', tourist_sights_path %>
					</p>
				</div>
			</div>
		</div>
		
		<br/>
		
		<div id="last_added_events">
			<br/>
			<div style="float: right">
				<span class="event_32"></span>
			</div>
			<span class="box_title">Eventos</span>
			<br/><br/>
			<div class="box">
				<div class="search_results_root">
					<%= render :partial => "events/list_root", :locals => {:events => @last_added_events} %>
					<p align="right" style="margin: 0px 11px 0px 0px;">
						<%= link_to 'ver todos &raquo;', events_path %>
					</p>
				</div>
			</div>
		</div>
		
		<br/>

		<div id="last_added_roadmaps">
			<br/>
			<div style="float: right">
				<span class="roadmap_32"></span>
			</div>
			<span class="box_title">Roteiros de viagem</span>
			<br/><br/>
			<div class="box">
				<div class="search_results_root">
					<%= render :partial => "roadmaps/list_root" %>
				</div>
			</div>
		</div>
		<br/>
	</div>
	
</div>






