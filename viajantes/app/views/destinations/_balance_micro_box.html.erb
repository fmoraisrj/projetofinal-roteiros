<div id="saldo" style="float: left; margin-bottom: 10px;">
	<div class="box_white" style="width: 330px">
		<div class="search_results">
			<small>
				<strong>Total de dias:</strong> <%= @roadmap.total_of_days %>
			
				<br/>
		    
		    <strong>Custo Total Planejado:</strong> <%= currency(@roadmap.total_planned_cost) %>
		    
		    <br/>
		    
		    <strong>Custo Total Executado:</strong> <%= currency(@roadmap.total_actual_cost) %>
		    
				<br/>
		
				<strong>Saldo:</strong>
				<% if @roadmap.balance < 0 %>
					<span class="negative">
				<% else %>
					<span class="positive">
				<% end %>
				<%= currency(@roadmap.balance) %>
				</span>
				<%= "(#{currency @roadmap.total_planned_cost} - #{currency @roadmap.total_actual_cost})" %>
			
			</small>
		</div>
	</div>
</div>
