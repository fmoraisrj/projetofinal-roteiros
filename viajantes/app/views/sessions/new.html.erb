<%= focus("login") %>

<h1 class="fazer_login">Fazer login</h1>
<% form_tag session_path do -%>
<table class="form">
    <tr>
      <td><label for="login">Login</label></td>
      <td><%= text_field_tag 'login' %></td>
    </tr>
    <tr>
      <td><label for="password">Senha</label></td>
      <td><%= password_field_tag 'password' %></td>
    </tr>
    <tr>
      <td></td>
      <td>
         <%= check_box_tag 'remember_me' %>
         <label for="remember_me">Lembrar? </label>       
      </td>
    </tr>
    <tr>
      <td></td>
      <td><%= submit_tag 'Entrar' %></td>
    </tr>
  </table>

<% end -%>
