<% if @tips and @tips.length > 0 %>
	<table class="tabela" with=100% cellspacing="2">
		<tr>
		  <th width="20%">Nome</th>
		  <th width="80%">Descrição</th>
		</tr>

	<% @tips.each_with_index do |tip, index| %>
		<% if index.odd? %>
			<tr class="odd">
			<% else %>
			<tr class="even">
		<% end %>
		  <td><%=h tip.name %></td>
		  <td><%=h tip.description %></td>
		</tr>
	<% end %>	
	</table>
<% else %>
	<br/>
	<em>Nenhuma dica encontrada.</em>
<% end %>
