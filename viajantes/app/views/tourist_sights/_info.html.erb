<table width="100%" class="tabela_info" cellspacing="5">
	<tr>
		<td colspan="2" align="center">
			<%= render :partial => 'tourist_sights/location' %>
		</td>
	</tr>
	<tr>
		<td width="10%" align="right">
			<strong>Nome:</strong>
		</td>
		<td align="left"><%=h @tourist_sight.name %></td>
	</tr>
	<tr>
		<td align="right">
			<strong>Endereço:</strong>
		</td>
		<td align="left"><%=h @tourist_sight.address %></td>
	</tr>
	<tr>
		<td align="right" valign="top">
			<strong>Descrição:</strong>
		</td>
		<td><%=h @tourist_sight.description %></td>
	</tr>
</table>
