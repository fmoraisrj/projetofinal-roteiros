<%= corner('info') %>

<table width="100%" class="tabela_info" cellspacing="5">
	<tr>
		<td colspan="2" align="center">
			<%= render :partial => 'tourist_sights/location' %>
		</td>
	</tr>
	<tr>
		<td width="10%" align="right">
			<strong>Nome:</strong>
		</td>
		<td align="left"><%=h @tourist_sight.name %></td>
	</tr>
	<tr>
		<td align="right">
			<strong>Endereço:</strong>
		</td>
		<td align="left"><%=h @tourist_sight.address %></td>
	</tr>
	<% if @tourist_sight.phone and @tourist_sight.phone.length > 0 %>
	<tr>
		<td align="right">
			<strong>Telefone:</strong>
		</td>
		<td align="left"><%=h @tourist_sight.phone %></td>
	</tr>
	<% end %>
	<% if @tourist_sight.email and @tourist_sight.email.length > 0 %>
	<tr>
		<td align="right">
			<strong>E-mail:</strong>
		</td>
		<td align="left"><%=h @tourist_sight.email %></td>
	</tr>
	<% end %>
	<% if @tourist_sight.visitation_period and @tourist_sight.visitation_period.length > 0 %>
	<tr>
		<td align="right">
			<strong>Período de visitação:</strong>
		</td>
		<td align="left">
			<%=h @tourist_sight.visitation_period %>
		</td>
	</tr>
	<% end %>
	<tr>
		<td align="right" valign="top">
			<strong>Descrição:</strong>
		</td>
		<td style="text-align: justify;">
		  <% if (not @tourist_sight.description) or @tourist_sight.description.length == 0 %>
		    <i>Não informado</i>
		  <% else %>
  		  <%= simple_format(h @tourist_sight.description) %>
  		<% end %>
		</td>
	</tr>
</table>
