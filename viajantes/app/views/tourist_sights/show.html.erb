	<%= image_tag "seta_direita_16.png", :align => "right", :id => "seta1" %>
	<%= image_tag "seta_baixo_16.png", :align => "right", :style => "display: none;", :id => "seta2" %>
	Dicas
</div>

<div id="dicas" style="border: 1px solid #C1CDCD; display: none; border-top: 0px;" align="center">
	<%= render "tips/list" %>
