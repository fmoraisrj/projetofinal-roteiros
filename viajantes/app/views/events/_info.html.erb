<%= corner('info') %>

<table width="100%" class="tabela_info" cellspacing="5">
	<tr>
		<td colspan="2" align="center">
			<%= render :partial => 'events/location' %>
		</td>
	</tr>
	<tr>
		<td width="9%" align="right">
			<strong>Nome:</strong>
		</td>
		<td align="left"><%=h @event.name %></td>
	</tr>
	<tr>
		<td align="right">
			<strong>Data:</strong>
		</td>
		<td align="left"><%= time_format(@event.time) %>
	</tr>
	<tr>
		<td align="right">

			<% if @event.tourist_sight %>
				<strong>Acontece em: </strong><%= @event.tourist_sight.name %><br/>
				<strong>Endereço: </strong><%= @event.tourist_sight.address %><br/>
			<% elsif @event.shop %>
				<strong>Acontece em: </strong><%= @event.shop.name %><br/>
				<strong>Endereço: </strong><%= @event.shop.address %><br/>
			<% end %>
		</td>
	</tr>
	<tr>
		<td align="right" valign="top">
			<strong>Descrição:</strong>
		</td>
		<td style="text-align: justify;">
		  <% if (not @event.description) or @event.description.length == 0 %>
		    <i>Não informado</i>
		  <% else %>
  		  <%=h @event.description %>
  		<% end %>
		</td>
	</tr>
	<tr><td><br/></td></tr>
</table>
