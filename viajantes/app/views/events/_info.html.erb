<%= corner('info') %>

<table width="100%" class="tabela_info" cellspacing="5">
	<tr>
		<td colspan="2" align="center">
			<%= render :partial => 'events/location' %>
		</td>
	</tr>
	<tr>
		<td width="11%" align="right">
			<strong>Nome:</strong>
		</td>
		<td align="left"><%=h @event.name %></td>
	</tr>
	<tr>
		<td align="right">
			<strong>Data:</strong>
		</td>
		<td align="left">
			<%= time_format(@event.time) %>  
			<% if date_format(@event.time) == date_format(Date.today) %>
				<span class="hoje">hoje</span> 
			<% end %>
		</td>	
	</tr>
	<tr>
		<td align="right">
			<strong>Custo:</strong>
		</td>
		<td>
		  <% if(@event.cost > 0) %>
		    <%=h currency(@event.cost) %>
		  <% else %>
		    Gratuito.
		  <% end %>
		</td>
	</tr>
	<tr>
	  <td align="right">
			<strong>Endereço:</strong>
		</td>
	  <td>
	    <%=h @event.address %>
	  </td>
	</td>
	<tr>
		<td align="right" valign="top">
			<strong>Descrição:</strong>
		</td>
		<td style="text-align: justify;">
		  <% if (not @event.description) or @event.description.length == 0 %>
		    <i>Não informado</i>
		  <% else %>
  		  <%= simple_format(h @event.description) %>
  		<% end %>
		</td>
	</tr>
</table>
