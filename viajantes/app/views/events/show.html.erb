<%= corner('users_evaluations') %>
<%= corner('evaluation_average') %>

<h1 class="event">Evento</h1>

<%= render :partial => "info" %>

<% if logged_in? %>
	<div style="float: right;">
		<%= link_to 'Editar', edit_event_path(@event) %> |
		<%= link_to 'Apagar', @program, :confirm => 'Você tem certeza?', :method => :delete %>
	</div>
<% end %>

<br><br/>

<!-- Titulo Avaliacoes -->
<h2 class="evaluation_32">
	Avaliação de outros usuários
	<% if logged_in? %>
		<%= link_to 'Avaliar', new_event_event_evaluation_path(@event), 
								:class => 'botao' %>
	<% end %>
</h2>
<!-- /Titulo Avaliacoes -->

<!-- Media das Avaliacoes -->
<div id="evaluation_average" style="float: right;">
	<%= render :partial => 'evaluations/average' %>
</div>
<!-- /Media das Avaliacoes -->

<!-- Div das Avaliacoes e Dicas -->
<div style="width: 670px;">
  <div id="users_evaluations">
	  <%= render :partial => 'evaluations/list' %>
  </div>

  <br/><br/>

  <h2 class="tips_32">
    Dicas &nbsp;
    <% if logged_in? %>
	    <%= link_to 'Nova dica', new_event_event_tip_path(@event), :class => "botao" %>
    <% end %>
  </h2>
  
  <div>
    <%= render :partial => 'tips/list' %>
  </div>
</div>
<!-- /Div das Avaliacoes e Dicas -->

<div class="clearer"></div>

<br/>
<%= link_to 'Voltar', events_path %>
